---
import Navbar from "../components/Navbar.astro";
---

<Navbar title="TechEco Soluciones" />

<section>
    <h2>Inscripción a Proyectos</h2>
    <form action="#" method="post">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" required />

        <label for="email">Correo Electrónico:</label>
        <input type="email" id="email" name="email" required />

        <label for="project">Proyecto de Interés:</label>
        <select id="project" name="project">
            <option value="agritech">AgriTech Inteligente</option>
            <option value="energia">Energía Renovable</option>
            <option value="ciudades">Ciudades Inteligentes</option>
        </select>

        <button type="submit">Enviar</button>
    </form>
</section>

<style>
    section {
        padding: 2rem;
    }
    form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>
